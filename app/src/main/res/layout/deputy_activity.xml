<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:background="@drawable/radius_vert_clair"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewIteDeputy"
            android:layout_width="match_parent"
            android:layout_height="130sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textViewItemDeputyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="NOM PRENOM"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sexe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:textStyle="italic"
            android:text="SEXE"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/radius_vert_clair"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_marginBottom="20sp"
            android:text="Responsabilites"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewDeputy"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            tools:listitem="@layout/item_resp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/radius_vert_clair"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_marginBottom="20sp"
            android:text="Votes"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewVote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10sp"
            android:scrollbars="none"
            tools:listitem="@layout/vote" />

    </LinearLayout>

</LinearLayout>
